{
  "name": "smoke",
  "version": "1.0.0",
  "description": "Simple yet powerful file-based mock server",
  "main": "smoke.js",
  "bin": {
    "smoke": "./bin/smoke"
  },
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "start": "smoke test/mocks",
    "test": "xo && jest",
    "postpublish": "git tag -a $npm_package_version -m \"$npm_package_version\" && git push --tags"
  },
  "keywords": [
    "mock",
    "server",
    "api",
    "file",
    "file-based",
    "json",
    "rest",
    "template"
  ],
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "globby": "^8.0.1",
    "import-fresh": "^2.0.0",
    "lodash.template": "^4.4.0",
    "minimist": "^1.2.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "path-to-regexp": "^2.4.0"
  },
  "devDependencies": {
    "jest": "^23.6.0",
    "supertest": "^3.3.0",
    "xo": "^0.23.0"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "ignores": [
      "test/mocks/**/*"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
