{
  "name": "smoke",
  "version": "2.2.4",
  "description": "Simple yet powerful file-based mock server with recording abilities",
  "main": "lib/smoke.js",
  "bin": {
    "smoke": "./bin/smoke",
    "smoke-conv": "./bin/smoke-conv"
  },
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "start": "smoke test/mocks",
    "test": "xo && jest",
    "postpublish": "git tag -a $npm_package_version -m \"$npm_package_version\" && git push --tags"
  },
  "keywords": [
    "mock",
    "server",
    "api",
    "file",
    "file-based",
    "json",
    "rest",
    "template"
  ],
  "author": "Yohan Lasorsa",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-http-proxy": "^1.5.1",
    "fs-extra": "^8.0.1",
    "globby": "^10.0.1",
    "import-fresh": "^3.0.0",
    "lodash.template": "^4.4.0",
    "mime-types": "^2.1.24",
    "minimist": "^1.2.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.1",
    "path-to-regexp": "^3.0.0"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "supertest": "^4.0.2",
    "xo": "^0.24.0"
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node",
      "jest"
    ],
    "ignores": [
      "test/mocks/**/*"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js",
      "lib/**/*.js"
    ],
    "silent": true,
    "verbose": true
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": false
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
